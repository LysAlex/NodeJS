extends layout
block content
   div#header
      div.top
         div#logo
            span(class='image avatar48')
               img(src='/images/avatar.jpg', alt='')
            h1#title FaceCast
            p Un site NodeJS
         nav#nav
            ul
               li
                  a(href='/', id='top-link', class='icon fa-home') &nbsp;Intro
            ul
               li
                  a(href='/offers', id='songs-link', class='icon fa-users') &nbsp;Offres
            ul
               li
                  a(href='/state', id='users-link', class='icon fa-star') &nbsp;Etat
            ul
               li
                  a(href='/users', id='users-link', class='skel-layers-ignoreHref')
                  span(class='icon fa-user') &nbsp;Inscrits                  
      div.bottom
   div#main
      section(id='top', class='one dark cover')
         div.container
            header
               h2.alt Liste des inscrits
               br
               <table>
               <tr>
               <th> Nom </th>
               <th> Prenom </th>
               <th> Email </th>
               </tr>
            ul
               each user, i in userslist
                  tr
                  td
                     = user.firstName
                  td 
                     = user.lastName 
                  td
                     = user.email 
                  td
                     a(href='users/removeuser/'+ user._id, class = 'icon fa-eraser', title = 'DELETE')
                  td
                     a(href='users/update/'+ user._id, class = 'icon fa-users', title = 'UPDATE') 
            </table>
            <footer>
            <a href="/users/insert" class="button scrolly"> Ajouter un utilisateur </a>  